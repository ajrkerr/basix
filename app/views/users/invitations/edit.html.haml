= semantic_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put } do |f|
  = f.hidden_field :invitation_token 

  = f.inputs 'Register' do
    %p Please provide us with some basic information for your user account
    = f.input :first_name, :required => true, :hint => "Your first name"
    = f.input :last_name, :required => true, :hint => "Your last name"
    = f.input :password, :as => :password, :required => true, :hint => "Please choose a password"
    = f.input :password_confirmation, :as => :password, :required => true, :hint => "Please type your password again"

  = f.submit "Save", :class => 'btn btn-large btn-success'
